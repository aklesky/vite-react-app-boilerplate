{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        ":semanticCommits"
    ],
    "schedule": [
        "before 9am on Monday"
    ],
    "timezone": "Europe/Berlin",
    "rebaseWhen": "conflicted",
    "rangeStrategy": "pin",
    "ignoreUnstable": true,
    "stabilityDays": 7,
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "matchPackageNames": ["node"],
            "allowedVersions": "18.9.0"
        },
        {
            "matchDepTypes": [
                "devDependencies",
                "dependencies"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "groupName": "dependencies (major)"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "devDependencies (minor-patch)"
        },
        {
            "matchDepTypes": [
                "dependencies"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "dependencies (minor-patch)"
        }
    ]
}
